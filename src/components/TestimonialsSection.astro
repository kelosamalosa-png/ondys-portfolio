---
import { getTestimonials } from '../lib/testimonials';

interface Props {
  lang: 'cs' | 'en';
}

const { lang } = Astro.props;
const testimonials = await getTestimonials();
---

{testimonials.length > 0 && (
  <section id="testimonials" class="py-24 scroll-mt-20">
    <div class="container-main">
      <div class="mb-12 reveal">
        <div class="section-label">{lang === 'cs' ? '// Reference' : '// Testimonials'}</div>
        <h2 class="section-heading">{lang === 'cs' ? 'Co říkají klienti' : 'What Clients Say'}</h2>
        <p class="section-subheading">
          {lang === 'cs' 
            ? 'Zpětná vazba od lidí, se kterými jsem spolupracoval.'
            : 'Feedback from people I\'ve worked with.'}
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 reveal-stagger">
        {testimonials.map((t) => (
          <div class="card p-6 flex flex-col">
            <!-- Stars -->
            <div class="flex gap-0.5 mb-4">
              {Array.from({ length: t.rating }).map(() => (
                <svg class="w-4 h-4 text-accent" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            
            <!-- Quote -->
            <blockquote class="text-surface-300 text-sm leading-relaxed mb-6 flex-1 italic">
              "{lang === 'cs' ? t.text_cs : t.text_en}"
            </blockquote>
            
            <!-- Author -->
            <div class="flex items-center gap-3 pt-4 border-t border-surface-800/60">
              {t.avatar_url ? (
                <img 
                  src={t.avatar_url} 
                  alt={t.name}
                  class="w-10 h-10 rounded-full object-cover border border-surface-700"
                  loading="lazy"
                />
              ) : (
                <div class="w-10 h-10 rounded-full bg-accent/10 border border-accent/20 flex items-center justify-center">
                  <span class="text-accent font-display font-bold text-sm">
                    {t.name.split(' ').map(n => n[0]).join('').slice(0, 2)}
                  </span>
                </div>
              )}
              <div>
                <p class="text-white text-sm font-semibold font-display">{t.name}</p>
                <p class="text-surface-500 text-xs font-mono">
                  {lang === 'cs' ? t.role_cs : t.role_en}{t.company ? ` · ${t.company}` : ''}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
)}
