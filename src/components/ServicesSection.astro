---
import { getTranslations } from '../i18n/utils';
import { getFeaturedServices } from '../lib/services';

interface Props {
  lang: 'cs' | 'en';
}

const { lang } = Astro.props;
const t = getTranslations(lang);

const servicesData = await getFeaturedServices();
const services = servicesData.map((service) => ({
  title: lang === 'cs' ? service.data.title_cs : service.data.title_en,
  description: lang === 'cs' ? service.data.description_cs : service.data.description_en,
  href: `/${lang}/services/${lang === 'cs' ? service.data.slug_cs : service.data.slug_en}`,
  icon: service.data.icon,
  tags: service.data.tags,
}));

const sectionTitle = lang === 'cs' ? 'Služby' : 'Services';
const sectionSubtitle = lang === 'cs' 
  ? 'Pomáhám firmám a jednotlivcům s mobilními aplikacemi, AI viditelností a webovou bezpečností.'
  : 'I help businesses and individuals with mobile apps, AI visibility, and web security.';
const viewAllLabel = lang === 'cs' ? 'Zjistit více' : 'Learn more';
---

<section id="services" class="py-20 scroll-mt-20">
  <div class="container-main">
    <div class="mb-12">
      <h2 class="section-heading">{sectionTitle}</h2>
      <p class="section-subheading">{sectionSubtitle}</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {services.map((service) => (
        <a 
          href={service.href}
          class="glass-card p-6 group hover:border-brand-500/50 transition-all duration-300"
        >
          <div class="text-4xl mb-4">{service.icon}</div>
          
          <h3 class="text-xl font-display font-semibold text-white mb-3 group-hover:text-brand-400 transition-colors">
            {service.title}
          </h3>
          
          <p class="text-surface-400 mb-4 text-sm">
            {service.description}
          </p>
          
          <div class="flex flex-wrap gap-2 mb-4">
            {service.tags.map((tag) => (
              <span class="tag text-xs">{tag}</span>
            ))}
          </div>
          
          <span class="inline-flex items-center text-brand-400 text-sm font-medium group-hover:text-brand-300 transition-colors">
            {viewAllLabel}
            <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </span>
        </a>
      ))}
    </div>
  </div>
</section>
