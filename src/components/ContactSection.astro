---
import { getTranslations } from '../i18n/utils';
import ContactForm from './ContactForm.tsx';

interface Props {
  lang: 'cs' | 'en';
}

const { lang } = Astro.props;
const t = getTranslations(lang);
---

<section id="contact" class="py-24 scroll-mt-20">
  <div class="container-main">
    <div class="max-w-2xl mx-auto">
      <div class="text-center mb-12 reveal">
        <div class="section-label">{lang === 'cs' ? '// Kontakt' : '// Contact'}</div>
        <h2 class="section-heading">{t.contact.title}</h2>
        <p class="section-subheading mx-auto">{t.contact.subtitle}</p>
      </div>
      
      <div class="reveal" style="transition-delay: 100ms;">
        <ContactForm lang={lang} client:visible />
      </div>
    </div>
  </div>
</section>
