---
import { getTranslations } from '../i18n/utils';

interface Props {
  lang: 'cs' | 'en';
}

const { lang } = Astro.props;
const t = getTranslations(lang);

const terminalLines = lang === 'cs' ? [
  { type: 'prompt', text: 'whoami' },
  { type: 'output', text: 'Ondřej Sládek — solo product builder, Praha' },
  { type: 'prompt', text: 'cat skills.txt' },
  { type: 'output', text: 'Flutter · Offline-first · PDF/QR · API integrace' },
  { type: 'prompt', text: 'cat mission.txt' },
  { type: 'output', text: t.hero.headline },
  { type: 'prompt', text: 'ls ./projects --featured' },
  { type: 'output', text: 'FACHA/  AI-Audit/  Web-Firewall/  GSS/' },
] : [
  { type: 'prompt', text: 'whoami' },
  { type: 'output', text: 'Ondřej Sládek — solo product builder, Prague' },
  { type: 'prompt', text: 'cat skills.txt' },
  { type: 'output', text: 'Flutter · Offline-first · PDF/QR · API integrations' },
  { type: 'prompt', text: 'cat mission.txt' },
  { type: 'output', text: t.hero.headline },
  { type: 'prompt', text: 'ls ./projects --featured' },
  { type: 'output', text: 'FACHA/  AI-Audit/  Web-Firewall/  GSS/' },
];
---

<section class="relative min-h-[92vh] flex items-center overflow-hidden">
  <!-- Dot grid background -->
  <div class="absolute inset-0 dot-grid opacity-60"></div>
  
  <!-- Glow orb -->
  <div class="absolute top-1/4 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] rounded-full opacity-20 blur-[120px] pointer-events-none" style="background: radial-gradient(circle, var(--color-accent) 0%, transparent 70%);"></div>

  <div class="container-main relative z-10 py-20">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      
      <!-- Left: Text content -->
      <div>
        <div class="section-label reveal">{lang === 'cs' ? 'Solo vývojář & tvůrce produktů' : 'Solo developer & product builder'}</div>
        
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-display font-bold text-white mb-6 leading-[1.1] reveal" style="transition-delay: 80ms;">
          {t.hero.headline}
        </h1>
        
        <p class="text-lg text-surface-400 mb-8 max-w-lg leading-relaxed reveal" style="transition-delay: 160ms;">
          {t.hero.subheadline}
        </p>
        
        <!-- Keywords -->
        <div class="flex flex-wrap gap-2 mb-10 reveal" style="transition-delay: 240ms;">
          {t.hero.keywords.map((keyword) => (
            <span class="tag-accent">{keyword}</span>
          ))}
        </div>
        
        <!-- CTAs -->
        <div class="flex flex-wrap gap-3 reveal" style="transition-delay: 320ms;">
          <a href="#projects" class="btn btn-primary">
            {t.hero.ctaProjects}
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </a>
          <a href="#contact" class="btn btn-secondary">
            {t.hero.ctaContact}
          </a>
        </div>
      </div>
      
      <!-- Right: Terminal -->
      <div class="reveal" style="transition-delay: 200ms;">
        <div class="terminal" id="hero-terminal">
          <div class="terminal-bar">
            <div class="terminal-dot bg-red-500/80"></div>
            <div class="terminal-dot bg-yellow-500/80"></div>
            <div class="terminal-dot bg-green-500/80"></div>
            <span class="ml-3 text-surface-600 text-xs font-mono">~/ondys.dev</span>
          </div>
          <div class="terminal-body min-h-[280px]" id="terminal-content">
            {terminalLines.map((line, i) => (
              <div 
                class="terminal-line mb-1"
                style={`animation-delay: ${i * 400 + 500}ms;`}
              >
                {line.type === 'prompt' ? (
                  <span>
                    <span class="terminal-prompt">❯ </span>
                    <span class="text-surface-200">{line.text}</span>
                  </span>
                ) : (
                  <span class="text-surface-500">{line.text}</span>
                )}
              </div>
            ))}
            <div 
              class="terminal-line mt-2" 
              style={`animation-delay: ${terminalLines.length * 400 + 500}ms;`}
            >
              <span class="terminal-prompt">❯ </span>
              <span class="terminal-cursor"></span>
            </div>
          </div>
        </div>
        
        <!-- Status strip below terminal -->
        <div class="flex items-center justify-between mt-3 px-1">
          <div class="flex items-center gap-4">
            <div class="flex items-center gap-1.5">
              <span class="w-1.5 h-1.5 rounded-full bg-green-400 animate-pulse-dot"></span>
              <span class="text-xs font-mono text-surface-600">{lang === 'cs' ? 'K dispozici pro projekty' : 'Available for projects'}</span>
            </div>
          </div>
          <span class="text-xs font-mono text-surface-700">v2.0.0</span>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-6 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 text-surface-600">
    <span class="text-xs font-mono tracking-wider uppercase">{lang === 'cs' ? 'Scrolluj' : 'Scroll'}</span>
    <div class="w-px h-8 bg-gradient-to-b from-surface-600 to-transparent"></div>
  </div>
</section>
