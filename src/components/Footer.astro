---
import { getTranslations } from '../i18n/utils';

interface Props {
  lang: 'cs' | 'en';
}

const { lang } = Astro.props;
const t = getTranslations(lang);
const currentYear = new Date().getFullYear();
---

<footer class="border-t border-surface-800/60 mt-auto">
  <div class="container-main py-16">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-12 md:gap-8">
      
      <!-- Brand column -->
      <div class="md:col-span-5">
        <a href={`/${lang}`} class="inline-flex items-center gap-2 group mb-4">
          <span class="font-mono text-accent font-semibold text-sm">~/</span>
          <span class="font-display font-bold text-lg text-white">
            ondys<span class="text-accent">.dev</span>
          </span>
        </a>
        <p class="text-surface-500 text-sm leading-relaxed max-w-xs mb-6">
          {t.footer.role}
        </p>
        
        <!-- Social links -->
        <div class="flex items-center gap-3">
          <a href="https://github.com/kelosamalosa-png" target="_blank" rel="noopener noreferrer" class="w-8 h-8 rounded-lg bg-surface-900 border border-surface-800 flex items-center justify-center text-surface-500 hover:text-white hover:border-surface-600 transition-all" aria-label="GitHub">
