---
import { getTranslations } from '../i18n/utils';

interface Props {
  lang: 'cs' | 'en';
}

const { lang } = Astro.props;
const t = getTranslations(lang);
---

<section class="py-24">
  <div class="container-main">
    <div class="card p-8 sm:p-12 text-center relative overflow-hidden reveal">
      <!-- Accent gradient background -->
      <div class="absolute inset-0 opacity-[0.03]" style="background: radial-gradient(ellipse at center, var(--color-accent) 0%, transparent 70%);"></div>
      
      <div class="relative z-10">
        <div class="w-12 h-12 mx-auto mb-6 rounded-lg bg-accent/10 border border-accent/20 flex items-center justify-center">
          <span class="text-accent text-xl">â™¥</span>
        </div>
        
        <h2 class="section-heading">{t.support.title}</h2>
        <p class="text-surface-400 max-w-lg mx-auto mb-8 text-sm leading-relaxed">
          {t.support.subtitle}
        </p>
        
        <a href={`/${lang}/support`} class="btn btn-primary">
          {t.support.title}
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
