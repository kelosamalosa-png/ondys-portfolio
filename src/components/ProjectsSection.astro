---
import { getTranslations } from '../i18n/utils';
import { 
  getFeaturedProjects,
  getProjects,
  getLocalizedTitle, 
  getLocalizedSummary, 
  getStatusLabel,
  type ProjectEntry,
  type ProjectData
} from '../lib/projects';

interface Props {
  lang: 'cs' | 'en';
  limit?: number;
  showViewAll?: boolean;
  featuredOnly?: boolean;
}

const { lang, limit, showViewAll = true, featuredOnly = false } = Astro.props;
const t = getTranslations(lang);

const allProjects = featuredOnly ? await getFeaturedProjects() : await getProjects();
const projects = limit ? allProjects.slice(0, limit) : allProjects;

function getStatusClass(status: ProjectData['status']): string {
  const map: Record<ProjectData['status'], string> = {
    live: 'status-live',
    beta: 'status-beta',
    prototype: 'status-prototype',
  };
  return map[status];
}
---

<section id="projects" class="py-24 scroll-mt-20">
  <div class="container-main">
    <!-- Section header -->
    <div class="flex flex-col sm:flex-row sm:items-end justify-between gap-6 mb-12 reveal">
      <div>
        <div class="section-label">{lang === 'cs' ? '// Projekty' : '// Projects'}</div>
        <h2 class="section-heading">{featuredOnly ? (lang === 'cs' ? 'Vybrané projekty' : 'Selected Work') : t.projects.title}</h2>
        <p class="section-subheading">
          {featuredOnly 
            ? (lang === 'cs' ? 'Projekty, na kterých aktuálně pracuji.' : 'Projects I\'m currently working on.')
            : t.projects.subtitle}
        </p>
      </div>
      
      {showViewAll && (
        <a href={`/${lang}/projects`} class="btn btn-secondary self-start sm:self-auto shrink-0">
          {t.projects.viewAll}
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      )}
    </div>
    
    <!-- Project grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 reveal-stagger">
      {projects.map((project, index) => (
        <a 
          href={`/${lang}/projects/${project.data.projectSlug}`}
          class:list={[
            "card card-interactive group p-6 flex flex-col",
            index === 0 && projects.length > 2 ? "md:col-span-2" : ""
          ]}
        >
          <!-- Top row: status + year -->
          <div class="flex items-center justify-between mb-4">
            <span class={getStatusClass(project.data.status)}>
              {getStatusLabel(project.data.status, lang)}
            </span>
            {project.data.year && (
              <span class="text-xs font-mono text-surface-600">{project.data.year}</span>
            )}
          </div>
          
          <!-- Title -->
          <h3 class="text-xl font-display font-semibold text-white mb-2 group-hover:text-accent transition-colors">
            {getLocalizedTitle(project, lang)}
          </h3>
          
          <!-- Summary -->
          <p class="text-surface-400 text-sm mb-5 leading-relaxed line-clamp-2 flex-1">
            {getLocalizedSummary(project, lang)}
          </p>
          
          <!-- Bottom: stack + arrow -->
          <div class="flex items-center justify-between">
            <div class="flex flex-wrap gap-1.5">
              {project.data.stack.slice(0, 4).map((tech) => (
                <span class="tag">{tech}</span>
              ))}
            </div>
            <svg class="w-5 h-5 text-surface-700 group-hover:text-accent group-hover:translate-x-1 transition-all shrink-0 ml-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
