---
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
  description: string;
  lang: 'cs' | 'en';
  ogImage?: string;
  type?: 'website' | 'article';
  jsonLd?: object;
}

const { title, description, lang, ogImage = '/og.png', type = 'website', jsonLd } = Astro.props;
const fullTitle = `${title} | ONDYS.DEV`;
const siteUrl = 'https://ondys.dev';
const currentPath = Astro.url.pathname;
const canonicalUrl = `${siteUrl}${currentPath}`;
const absoluteOgImage = ogImage.startsWith('http') ? ogImage : `${siteUrl}${ogImage}`;

const csPath = currentPath.replace(/^\/en/, '/cs');
const enPath = currentPath.replace(/^\/cs/, '/en');
const hreflangCs = `${siteUrl}${csPath}`;
const hreflangEn = `${siteUrl}${enPath}`;

const defaultJsonLd = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Person",
      "@id": `${siteUrl}/#person`,
      "name": "Ondřej Sládek",
      "alternateName": "ONDYS",
      "url": siteUrl,
      "image": `${siteUrl}/og.png`,
      "jobTitle": "Flutter Developer & Product Builder",
      "description": lang === 'cs' 
        ? "Solo vývojář zaměřený na Flutter aplikace, offline-first řešení a AI nástroje. Sídlo v Praze, Česko."
        : "Solo developer focused on Flutter apps, offline-first solutions, and AI tools. Based in Prague, Czechia.",
      "knowsAbout": ["Flutter", "Mobile Development", "Offline-first Apps", "AI Visibility", "PDF Generation", "QR Payments"],
      "sameAs": [
        "https://github.com/kelosamalosa-png",
        "https://linkedin.com/in/ondrej-sladek",
        "https://neopryus.itch.io"
      ],
      "address": { "@type": "PostalAddress", "addressLocality": "Prague", "addressCountry": "CZ" }
    },
    {
      "@type": "ProfessionalService",
      "@id": `${siteUrl}/#business`,
      "name": "ONDYS.DEV",
      "url": siteUrl,
      "logo": `${siteUrl}/favicon.svg`,
      "image": `${siteUrl}/og.png`,
      "description": lang === 'cs'
        ? "Vývoj mobilních aplikací (Flutter), AI audity webů, bezpečnostní skenování."
        : "Mobile app development (Flutter), AI website audits, security scanning.",
      "founder": { "@id": `${siteUrl}/#person` },
      "areaServed": ["CZ", "Worldwide"],
      "serviceType": ["Mobile App Development", "Flutter Development", "AI Visibility Audit", "Web Security Scanning"],
      "priceRange": "$$",
      "address": { "@type": "PostalAddress", "addressLocality": "Prague", "addressCountry": "CZ" },
      "sameAs": ["https://github.com/kelosamalosa-png", "https://linkedin.com/in/ondrej-sladek"]
    },
    {
      "@type": "WebSite",
      "@id": `${siteUrl}/#website`,
      "url": siteUrl,
      "name": "ONDYS.DEV",
      "description": lang === 'cs'
        ? "Portfolio Ondřeje Sládka - Flutter vývojář a produktový tvůrce"
        : "Portfolio of Ondřej Sládek - Flutter developer and product builder",
      "publisher": { "@id": `${siteUrl}/#person` },
      "inLanguage": [lang === 'cs' ? 'cs-CZ' : 'en-US']
    }
  ]
};

const finalJsonLd = jsonLd || defaultJsonLd;
---

<!DOCTYPE html>
<html lang={lang === 'cs' ? 'cs-CZ' : 'en-US'}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <meta name="author" content="Ondřej Sládek" />
    
    <link rel="canonical" href={canonicalUrl} />
    <link rel="alternate" hreflang="cs" href={hreflangCs} />
    <link rel="alternate" hreflang="en" href={hreflangEn} />
    <link rel="alternate" hreflang="x-default" href={hreflangEn} />
    
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&family=Space+Grotesk:wght@500;600;700&display=swap" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&family=Space+Grotesk:wght@500;600;700&display=swap" rel="stylesheet" />
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/favicon.svg" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#09090B" />
    
    <ViewTransitions />
    
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={absoluteOgImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content={lang === 'cs' ? 'cs_CZ' : 'en_US'} />
    <meta property="og:locale:alternate" content={lang === 'cs' ? 'en_US' : 'cs_CZ'} />
    <meta property="og:site_name" content="ONDYS.DEV" />
    
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={absoluteOgImage} />
    
    <script type="application/ld+json" set:html={JSON.stringify(finalJsonLd)} />
  </head>
  <body class="min-h-dvh flex flex-col bg-surface-950 text-surface-200 font-sans antialiased">
    <slot />
    
    <!-- Scroll-to-top button -->
    <button
      id="scroll-top-btn"
      class="scroll-glow fixed bottom-6 right-6 z-50 w-10 h-10 rounded-xl bg-surface-900 border border-surface-800 flex items-center justify-center text-surface-500 hover:text-accent hover:border-accent/30 transition-all shadow-lg"
      aria-label="Scroll to top"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
      </svg>
    </button>

    <!-- Language persistence -->
    <script is:inline>
      (function() {
        var K = 'ondys-lang', p = location.pathname;
        if (p === '/' || p === '') {
          var s = localStorage.getItem(K);
          if (s === 'cs' || s === 'en') { location.replace('/' + s); return; }
          var l = (navigator.language || '').slice(0, 2);
          location.replace('/' + (l === 'cs' || l === 'sk' ? 'cs' : 'cs'));
          return;
        }
        localStorage.setItem(K, p.startsWith('/en') ? 'en' : 'cs');
      })();
    </script>

    <!-- Scroll reveal observer + scroll-to-top -->
    <script>
      function initReveal() {
        const obs = new IntersectionObserver((entries) => {
          entries.forEach(e => {
            if (e.isIntersecting) {
              e.target.classList.add('visible');
              obs.unobserve(e.target);
            }
          });
        }, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });

        document.querySelectorAll('.reveal, .reveal-stagger').forEach(el => obs.observe(el));
      }

      function initScrollTop() {
        const btn = document.getElementById('scroll-top-btn');
        if (!btn) return;

        const onScroll = () => {
          if (window.scrollY > 400) {
            btn.classList.add('visible');
          } else {
            btn.classList.remove('visible');
          }
        };

        window.addEventListener('scroll', onScroll, { passive: true });
        onScroll();

        btn.addEventListener('click', () => {
          window.scrollTo({ top: 0, behavior: 'smooth' });
        });
      }
      
      document.addEventListener('astro:page-load', () => {
        initReveal();
        initScrollTop();
      });
      initReveal();
      initScrollTop();
    </script>
  </body>
</html>
