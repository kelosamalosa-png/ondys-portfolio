---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getTranslations } from '../../../i18n/utils';
import { getCollection } from 'astro:content';
import { 
  getProjects, 
  getLocalizedTitle, 
  getLocalizedSummary,
  getStatusLabel,
  type ProjectEntry,
  type ProjectData
} from '../../../lib/projects';
import { marked } from 'marked';

const lang = 'en';
const t = getTranslations(lang);

export async function getStaticPaths() {
  const projects = await getProjects();
  return projects.map((project) => ({
    params: { slug: project.data.projectSlug },
    props: { project },
  }));
}

interface Props {
  project: ProjectEntry;
}

const { project } = Astro.props;
const title = getLocalizedTitle(project, lang);
const summary = getLocalizedSummary(project, lang);
const bodyContent = project.data.body_en || '';
const renderedBody = await marked(bodyContent);

const allDevlogs = await getCollection('devlogs');
const projectDevlogs = allDevlogs
  .filter(log => log.data.projectSlug === project.data.projectSlug)
  .sort((a, b) => b.data.version.localeCompare(a.data.version, undefined, { numeric: true }));
const latestDevlog = projectDevlogs[0];

function getStatusClass(status: ProjectData['status']): string {
  const map: Record<ProjectData['status'], string> = {
    live: 'status-live',
    beta: 'status-beta',
    prototype: 'status-prototype',
  };
  return map[status];
}

const hasLinks = project.data.links_website || project.data.links_demo || project.data.links_github || project.data.links_other;
---

<BaseLayout 
  title={title} 
  description={summary} 
  lang={lang}
>
  <article class="py-24">
    <div class="container-main">
      <a href={`/${lang}/projects`} class="inline-flex items-center gap-2 text-surface-500 hover:text-accent transition-colors mb-8 text-sm font-mono group">
        <svg class="w-3.5 h-3.5 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        cd ~/projects
      </a>
      
      <header class="mb-12 reveal">
        <div class="flex flex-wrap items-center gap-3 mb-4">
          <span class={getStatusClass(project.data.status)}>
            {getStatusLabel(project.data.status, lang)}
          </span>
          <span class="tag">{project.data.category}</span>
          {project.data.year && (
            <span class="text-xs font-mono text-surface-600">{project.data.year}</span>
          )}
        </div>
        
        <h1 class="text-4xl sm:text-5xl font-display font-bold text-white mb-4 leading-tight">
          {title}
        </h1>
        
        <p class="text-lg text-surface-400 mb-6 max-w-2xl leading-relaxed">
          {summary}
        </p>
        
        <div class="flex flex-wrap items-center gap-3">
          <div class="flex flex-wrap gap-1.5">
            {project.data.stack.map((tech) => (
              <span class="tag">{tech}</span>
            ))}
          </div>
          {latestDevlog && (
            <a 
              href={`/${lang}/projects/${project.data.projectSlug}/devlog/${latestDevlog.data.version.replace(/\./g, '-')}`}
              class="inline-flex items-center gap-2 px-3 py-1.5 bg-accent/10 text-accent hover:bg-accent/20 rounded-lg font-mono text-sm transition-colors border border-accent/20"
            >
              DEV LOG v{latestDevlog.data.version}
              <span class={`px-1.5 py-0.5 text-[0.625rem] rounded font-bold uppercase ${
                latestDevlog.data.versionStatus === 'beta' ? 'bg-yellow-500/20 text-yellow-400' :
                latestDevlog.data.versionStatus === 'alpha' ? 'bg-red-500/20 text-red-400' :
                'bg-green-500/20 text-green-400'
              }`}>
                {latestDevlog.data.versionStatus}
              </span>
            </a>
          )}
        </div>
      </header>
      
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div class="lg:col-span-2 space-y-6">
          <section class="card p-6 reveal">
            <h2 class="text-lg font-display font-semibold text-white mb-4 flex items-center gap-2">
              <span class="text-accent font-mono text-sm">01</span>
              Details
            </h2>
            <div class="prose prose-invert max-w-none text-surface-300 text-sm leading-relaxed" set:html={renderedBody}>
            </div>
          </section>
          
          {project.data.images && project.data.images.length > 0 && (
            <section class="card p-6 reveal">
              <h2 class="text-lg font-display font-semibold text-white mb-4 flex items-center gap-2">
                <span class="text-accent font-mono text-sm">02</span>
                Screenshots
              </h2>
              <div class="grid grid-cols-2 sm:grid-cols-3 gap-3">
                {project.data.images.map((image, index) => (
                  <button 
                    type="button"
                    class="aspect-video bg-surface-900 rounded-lg overflow-hidden cursor-pointer hover:ring-2 hover:ring-accent/50 transition-all group"
                    onclick={`openLightbox('${image}')`}
                  >
                    <img 
                      src={image} 
                      alt={`${title} screenshot ${index + 1}`}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      loading="lazy"
                      onerror="this.parentElement.style.display='none'"
                    />
                  </button>
                ))}
              </div>
            </section>
          )}

          {projectDevlogs.length > 0 && (
            <section class="card p-6 reveal">
              <h2 class="text-lg font-display font-semibold text-white mb-4 flex items-center gap-2">
                <span class="text-accent font-mono text-sm">03</span>
                Devlog History
              </h2>
              <div class="space-y-2">
                {projectDevlogs.map((log) => (
                  <a 
                    href={`/${lang}/projects/${project.data.projectSlug}/devlog/${log.data.version.replace(/\./g, '-')}`}
                    class="flex items-center justify-between py-2.5 px-3 rounded-lg hover:bg-surface-800/50 transition-colors group"
                  >
                    <div class="flex items-center gap-3">
                      <span class="font-mono text-sm text-white group-hover:text-accent transition-colors">v{log.data.version}</span>
                      <span class={`text-[0.625rem] font-mono font-bold uppercase px-1.5 py-0.5 rounded ${
                        log.data.versionStatus === 'beta' ? 'bg-yellow-500/20 text-yellow-400' :
                        log.data.versionStatus === 'alpha' ? 'bg-red-500/20 text-red-400' :
                        'bg-green-500/20 text-green-400'
                      }`}>{log.data.versionStatus}</span>
                    </div>
                    <span class="text-xs font-mono text-surface-600">
                      {new Date(log.data.releaseDate).toLocaleDateString('en-US')}
                    </span>
                  </a>
                ))}
              </div>
            </section>
          )}
        </div>
        
        <aside class="space-y-4">
          {hasLinks && (
            <div class="card p-5">
              <h3 class="font-mono text-xs font-semibold text-surface-500 uppercase tracking-widest mb-4">Links</h3>
              <div class="space-y-2">
                {project.data.links_website && (
                  <a href={project.data.links_website} target="_blank" rel="noopener noreferrer" class="btn btn-primary w-full text-sm">
                    Website
                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                )}
                {project.data.links_demo && (
                  <a href={project.data.links_demo} target="_blank" rel="noopener noreferrer" class="btn btn-secondary w-full text-sm">
                    Demo
                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                )}
                {project.data.links_github && (
                  <a href={project.data.links_github} target="_blank" rel="noopener noreferrer" class="btn btn-secondary w-full text-sm">
                    GitHub
                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                )}
                {project.data.links_other && (
                  <a href={project.data.links_other} target="_blank" rel="noopener noreferrer" class="btn btn-secondary w-full text-sm">
                    {project.data.links_other_label || 'Other Link'}
                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                )}
              </div>
            </div>
          )}

          <div class="card p-5">
            <h3 class="font-mono text-xs font-semibold text-surface-500 uppercase tracking-widest mb-4">Stack</h3>
            <div class="flex flex-wrap gap-1.5">
              {project.data.stack.map((tech) => (
                <span class="tag">{tech}</span>
              ))}
            </div>
          </div>
          
          <div class="card p-5">
            <h3 class="font-mono text-xs font-semibold text-surface-500 uppercase tracking-widest mb-3">Info</h3>
            <dl class="space-y-3 text-sm">
              <div class="flex justify-between">
                <dt class="text-surface-500">Year</dt>
                <dd class="font-mono text-surface-300">{project.data.year}</dd>
              </div>
              <div class="flex justify-between">
                <dt class="text-surface-500">Category</dt>
                <dd class="font-mono text-surface-300">{project.data.category}</dd>
              </div>
              <div class="flex justify-between">
                <dt class="text-surface-500">Status</dt>
                <dd class="font-mono text-surface-300">{getStatusLabel(project.data.status, lang)}</dd>
              </div>
            </dl>
          </div>
        </aside>
      </div>
    </div>
  </article>

  <div id="lightbox" class="fixed inset-0 z-50 hidden items-center justify-center bg-surface-950/95 backdrop-blur-md" onclick="closeLightbox()">
    <button type="button" class="absolute top-4 right-4 text-surface-400 hover:text-white transition-colors" onclick="closeLightbox()">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
    <img id="lightbox-img" src="" alt="Screenshot" class="max-w-[90vw] max-h-[90vh] object-contain rounded-lg" onclick="event.stopPropagation()" />
  </div>

  <script is:inline>
    function openLightbox(src) {
      const lightbox = document.getElementById('lightbox');
      const img = document.getElementById('lightbox-img');
      img.src = src;
      lightbox.classList.remove('hidden');
      lightbox.classList.add('flex');
      document.body.style.overflow = 'hidden';
    }
    function closeLightbox() {
      const lightbox = document.getElementById('lightbox');
      lightbox.classList.add('hidden');
      lightbox.classList.remove('flex');
      document.body.style.overflow = '';
    }
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') closeLightbox();
    });
  </script>
</BaseLayout>
