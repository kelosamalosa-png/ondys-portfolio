---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getTranslations } from '../../../i18n/utils';
import { 
  getProjects, 
  getLocalizedTitle, 
  getLocalizedSummary, 
  getStatusLabel,
  type ProjectData
} from '../../../lib/projects';

const lang = 'en';
const t = getTranslations(lang);
const projects = await getProjects();

function getStatusClass(status: ProjectData['status']): string {
  const map: Record<ProjectData['status'], string> = {
    live: 'status-live',
    beta: 'status-beta',
    prototype: 'status-prototype',
  };
  return map[status];
}
---

<BaseLayout 
  title={t.meta.projectsTitle}
  description={t.meta.projectsDescription}
  lang={lang}
>
  <section class="py-24">
    <div class="container-main">
      <div class="mb-12 reveal">
        <a href={`/${lang}`} class="inline-flex items-center gap-2 text-surface-500 hover:text-accent transition-colors mb-6 text-sm font-mono group">
          <svg class="w-3.5 h-3.5 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          cd ~/
        </a>
        <div class="section-label">// Projects</div>
        <h1 class="section-heading">{t.projects.title}</h1>
        <p class="section-subheading">{t.projects.subtitle}</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 reveal-stagger">
        {projects.map((project) => (
          <a 
            href={`/${lang}/projects/${project.data.projectSlug}`}
            class="card card-interactive group p-6 flex flex-col"
          >
            <div class="flex items-center justify-between mb-4">
              <span class={getStatusClass(project.data.status)}>
                {getStatusLabel(project.data.status, lang)}
              </span>
              <div class="flex items-center gap-3">
                <span class="tag">{project.data.category}</span>
                {project.data.year && (
                  <span class="text-xs font-mono text-surface-600">{project.data.year}</span>
                )}
              </div>
            </div>
            
            <h3 class="text-xl font-display font-semibold text-white mb-2 group-hover:text-accent transition-colors">
              {getLocalizedTitle(project, lang)}
            </h3>
            
            <p class="text-surface-400 text-sm mb-5 leading-relaxed line-clamp-3 flex-1">
              {getLocalizedSummary(project, lang)}
            </p>
            
            <div class="flex items-center justify-between">
              <div class="flex flex-wrap gap-1.5">
                {project.data.stack.slice(0, 4).map((tech) => (
                  <span class="tag">{tech}</span>
                ))}
              </div>
              <svg class="w-5 h-5 text-surface-700 group-hover:text-accent group-hover:translate-x-1 transition-all shrink-0 ml-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
