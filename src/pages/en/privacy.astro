---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getTranslations } from '../../i18n/utils';

const lang = 'en';
const t = getTranslations(lang);
---

<BaseLayout 
  title={t.meta.privacyTitle} 
  description={t.meta.privacyDescription} 
  lang={lang}
>
  <section class="py-24">
    <div class="container-main">
      <div class="max-w-3xl mx-auto">
        <div class="mb-10 reveal">
          <a href={`/${lang}/`} class="inline-flex items-center gap-2 text-surface-500 hover:text-accent transition-colors mb-6 text-sm font-mono group">
            <svg class="w-3.5 h-3.5 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            cd ~/
          </a>
          <div class="section-label">// Privacy</div>
          <h1 class="section-heading">{t.privacy.title}</h1>
        </div>
        
        <div class="card p-8 reveal" style="transition-delay: 100ms;">
          <p class="text-surface-500 mb-6 text-xs font-mono">
            {t.privacy.lastUpdated}: 2026-02-01
          </p>
          
          <div class="prose prose-invert max-w-none text-surface-300 text-sm leading-relaxed prose-headings:font-display prose-headings:text-white prose-headings:text-base prose-headings:font-semibold prose-a:text-accent prose-a:no-underline hover:prose-a:text-accent-light">
            <p>{t.privacy.content}</p>
            
            <h2>1. Data Collection</h2>
            <p>
              This website collects only the minimum amount of data necessary for its operation. 
              We do not use tracking cookies or third-party analytics tools.
            </p>
            
            <h2>2. Contact Form</h2>
            <p>
              If you contact us through the form, we store your name, email, and message 
              only for the time necessary to respond to your inquiry.
            </p>
            
            <h2>3. Local Storage</h2>
            <p>
              We use localStorage in the browser to save your language preference. 
              This data remains only in your browser and is not sent to the server.
            </p>
            
            <h2>4. Your Rights</h2>
            <p>
              You have the right to request access to your data, correction, or deletion. 
              Contact us at ondys.dev@gmail.com.
            </p>
            
            <h2>5. Contact</h2>
            <p>
              For any privacy-related questions, contact us at: 
              <a href="mailto:ondys.dev@gmail.com">ondys.dev@gmail.com</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
