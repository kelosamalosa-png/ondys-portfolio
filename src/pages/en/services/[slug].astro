---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getTranslations } from '../../../i18n/utils';
import { getServices, getServiceBySlug, type ServiceEntry } from '../../../lib/services';
import { marked } from 'marked';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';

const lang = 'en';
const t = getTranslations(lang);

export async function getStaticPaths() {
  const services = await getServices();
  return services
    .filter((service) => service.data.slug_en)
    .map((service) => ({
      params: { slug: service.data.slug_en },
      props: { service },
    }));
}

interface Props {
  service: ServiceEntry;
}

const { service } = Astro.props;
const renderedBody = await marked(service.data.body_en || '');

const title = service.data.seo_title_en || service.data.title_en;
const description = service.data.seo_description_en || service.data.description_en;
const badge = service.data.badge_en;
const price = service.data.price_en;
const priceNote = service.data.price_note_en;

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": service.data.title_en,
  "provider": {
    "@type": "ProfessionalService",
    "name": "ONDYS.DEV",
    "url": "https://ondys.dev"
  },
  "description": description,
  "areaServed": ["CZ", "Worldwide"]
};
---

<BaseLayout 
  title={title}
  description={description}
  lang={lang}
  type="website"
  jsonLd={jsonLd}
>
  <section class="py-24">
    <div class="container-main">
      <Breadcrumbs items={[
        { label: 'Home', href: `/${lang}` },
        { label: 'Services', href: `/${lang}/#services` },
        { label: service.data.title_en },
      ]} />

      <!-- Header -->
      <header class="mb-12 reveal">
        
        {badge && (
          <span class="inline-block px-2.5 py-0.5 bg-accent/10 text-accent text-xs font-mono font-semibold rounded mb-4 border border-accent/20">
            {badge}
          </span>
        )}
        
        <h1 class="text-3xl sm:text-4xl font-display font-bold text-white mb-4 leading-tight">
          {service.data.title_en}
        </h1>
        
        <p class="text-lg text-surface-400 max-w-2xl leading-relaxed">
          {service.data.description_en}
        </p>
      </header>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div class="lg:col-span-2 reveal">
          <article class="card p-6">
            <div class="prose prose-invert max-w-none text-surface-300 text-sm leading-relaxed prose-headings:font-display prose-headings:text-white prose-headings:text-base prose-headings:font-semibold prose-a:text-accent prose-a:no-underline hover:prose-a:text-accent-light prose-strong:text-white">
              <Fragment set:html={renderedBody} />
            </div>
          </article>
        </div>

        <!-- Sidebar -->
        <aside class="space-y-4">
          <div class="card p-5 sticky top-24">
            <h3 class="font-mono text-xs font-semibold text-surface-500 uppercase tracking-widest mb-4">Order this service</h3>
            
            {price && (
              <div class="mb-4">
                <p class="text-2xl font-bold text-accent font-mono">{price}</p>
                {priceNote && <p class="text-surface-500 text-xs mt-1">{priceNote}</p>}
              </div>
            )}
            
            <a href={`/${lang}/#contact`} class="btn btn-primary w-full text-sm mb-3">
              Get a quote
            </a>
            <p class="text-surface-600 text-[0.625rem] text-center font-mono">Free initial consultation</p>
          </div>

          {service.data.related_project && (
            <div class="card p-5">
              <h3 class="font-mono text-xs font-semibold text-surface-500 uppercase tracking-widest mb-3">Related project</h3>
              <a href={`/${lang}/projects/${service.data.related_project}`} class="text-accent hover:text-accent-light transition-colors text-sm font-mono inline-flex items-center gap-1.5">
                View project
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
          )}

          {service.data.tags.length > 0 && (
            <div class="card p-5">
              <h3 class="font-mono text-xs font-semibold text-surface-500 uppercase tracking-widest mb-3">Technologies</h3>
              <div class="flex flex-wrap gap-1.5">
                {service.data.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </div>
          )}
        </aside>
      </div>

    </div>
  </section>
</BaseLayout>
