---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Detect language from referrer or default to English
const lang = 'en';
---

<Layout 
  title="Page Not Found" 
  description="The page you're looking for doesn't exist."
  lang={lang}
>
  <Header lang={lang} />
  
  <main class="flex-1 flex items-center justify-center py-20">
    <div class="container-main text-center">
      <div class="mb-8">
        <span class="text-8xl font-display font-bold text-brand-500">404</span>
      </div>
      
      <h1 class="text-3xl sm:text-4xl font-display font-bold text-white mb-4">
        Page Not Found
      </h1>
      
      <p class="text-lg text-surface-400 mb-8 max-w-md mx-auto">
        The page you're looking for doesn't exist or has been moved.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/en/" class="btn-primary">
          Go to Homepage (EN)
        </a>
        <a href="/cs/" class="btn-secondary">
          Přejít na úvod (CZ)
        </a>
      </div>
      
      <div class="mt-12 text-surface-500">
        <p class="text-sm">Looking for something specific?</p>
        <div class="flex flex-wrap justify-center gap-4 mt-4">
          <a href="/en/projects" class="text-brand-400 hover:text-brand-300 transition-colors">Projects</a>
          <a href="/en/services/flutter-app-development" class="text-brand-400 hover:text-brand-300 transition-colors">Services</a>
          <a href="/en/faq" class="text-brand-400 hover:text-brand-300 transition-colors">FAQ</a>
          <a href="/en/#contact" class="text-brand-400 hover:text-brand-300 transition-colors">Contact</a>
        </div>
      </div>
    </div>
  </main>
  
  <Footer lang={lang} />
</Layout>
