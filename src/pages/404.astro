---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const lang = 'en';
---

<Layout 
  title="Page Not Found" 
  description="The page you're looking for doesn't exist."
  lang={lang}
>
  <Header lang={lang} />
  
  <main class="flex-1 flex items-center justify-center py-24">
    <div class="container-main text-center">
      <!-- Terminal-style 404 -->
      <div class="terminal max-w-md mx-auto mb-10">
        <div class="terminal-bar">
          <div class="terminal-dot bg-red-500/80"></div>
          <div class="terminal-dot bg-yellow-500/80"></div>
          <div class="terminal-dot bg-green-500/80"></div>
          <span class="ml-3 text-surface-600 text-xs font-mono">~/404</span>
        </div>
        <div class="terminal-body text-left">
          <div class="mb-1">
            <span class="terminal-prompt">❯ </span>
            <span class="text-surface-200">find . -name "page"</span>
          </div>
          <div class="text-red-400 text-sm mb-1">Error: No matches found</div>
          <div class="mb-1">
            <span class="terminal-prompt">❯ </span>
            <span class="text-surface-200">echo $?</span>
          </div>
          <div class="text-accent text-6xl font-bold font-display my-4">404</div>
          <div class="mb-1">
            <span class="terminal-prompt">❯ </span>
            <span class="terminal-cursor"></span>
          </div>
        </div>
      </div>
      
      <h1 class="text-2xl font-display font-bold text-white mb-3">
        Page Not Found
      </h1>
      
      <p class="text-surface-500 mb-8 max-w-sm mx-auto text-sm">
        The page you're looking for doesn't exist or has been moved.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-3 justify-center">
        <a href="/en/" class="btn btn-primary">
          Homepage (EN)
        </a>
        <a href="/cs/" class="btn btn-secondary">
          Úvod (CZ)
        </a>
      </div>
      
      <div class="mt-10 text-surface-600">
        <p class="text-xs font-mono mb-3">Quick links:</p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/en/projects" class="text-accent hover:text-accent-light transition-colors text-sm font-mono">Projects</a>
          <a href="/en/faq" class="text-accent hover:text-accent-light transition-colors text-sm font-mono">FAQ</a>
          <a href="/en/#contact" class="text-accent hover:text-accent-light transition-colors text-sm font-mono">Contact</a>
        </div>
      </div>
    </div>
  </main>
  
  <Footer lang={lang} />
</Layout>
