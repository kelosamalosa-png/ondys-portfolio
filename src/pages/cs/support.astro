---
import BaseLayout from '../../layouts/BaseLayout.astro';
import DonateButtons from '../../components/DonateButtons.astro';
import { getTranslations } from '../../i18n/utils';

const lang = 'cs';
const t = getTranslations(lang);
---

<BaseLayout 
  title={t.meta.supportTitle} 
  description={t.meta.supportDescription} 
  lang={lang}
>
  <section class="py-24">
    <div class="container-main">
      <div class="max-w-2xl mx-auto">
        <div class="text-center mb-12 reveal">
          <a href={`/${lang}/`} class="inline-flex items-center gap-2 text-surface-500 hover:text-accent transition-colors mb-6 text-sm font-mono group">
            <svg class="w-3.5 h-3.5 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            cd ~/
          </a>
          
          <div class="w-12 h-12 mx-auto mb-5 rounded-lg bg-accent/10 border border-accent/20 flex items-center justify-center">
            <span class="text-accent text-xl">â™¥</span>
          </div>
          
          <div class="section-label">// Podpora</div>
          <h1 class="section-heading">{t.support.title}</h1>
          <p class="text-surface-400 max-w-lg mx-auto text-sm leading-relaxed">
            {t.support.subtitle}
          </p>
        </div>
        
        <div class="reveal" style="transition-delay: 100ms;">
          <DonateButtons lang={lang} />
        </div>
        
        <p class="text-center text-surface-500 mt-10 text-sm font-mono reveal" style="transition-delay: 200ms;">
          {t.support.thankYou}
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
