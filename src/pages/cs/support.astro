---
import BaseLayout from '../../layouts/BaseLayout.astro';
import DonateButtons from '../../components/DonateButtons.astro';
import { getTranslations } from '../../i18n/utils';

const lang = 'cs';
const t = getTranslations(lang);
---

<BaseLayout 
  title={t.meta.supportTitle} 
  description={t.meta.supportDescription} 
  lang={lang}
>
  <section class="py-20">
    <div class="container-main">
      <div class="max-w-2xl mx-auto">
        <div class="text-center mb-12">
          <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-brand-900/50 border border-brand-700/30 flex items-center justify-center">
            <svg class="w-10 h-10 text-brand-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
          </div>
          
          <h1 class="section-heading">{t.support.title}</h1>
          <p class="text-lg text-surface-300 max-w-xl mx-auto">
            {t.support.subtitle}
          </p>
        </div>
        
        <DonateButtons lang={lang} />
        
        <p class="text-center text-surface-400 mt-12">
          {t.support.thankYou}
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
