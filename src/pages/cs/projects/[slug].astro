---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getTranslations } from '../../../i18n/utils';
import { 
  getProjects, 
  getLocalizedTitle, 
  getLocalizedSummary,
  getStatusLabel,
  type ProjectEntry,
  type ProjectData
} from '../../../lib/projects';
import { marked } from 'marked';

const lang = 'cs';
const t = getTranslations(lang);

export async function getStaticPaths() {
  const projects = await getProjects();
  return projects.map((project) => ({
    params: { slug: project.data.projectSlug },
    props: { project },
  }));
}

interface Props {
  project: ProjectEntry;
}

const { project } = Astro.props;
const title = getLocalizedTitle(project, lang);
const summary = getLocalizedSummary(project, lang);
const bodyContent = project.data.body_cs || '';
const renderedBody = await marked(bodyContent);

function getStatusColor(status: ProjectData['status']): string {
  const colors: Record<ProjectData['status'], string> = {
    live: 'bg-green-500/20 text-green-400',
    beta: 'bg-yellow-500/20 text-yellow-400',
    prototype: 'bg-blue-500/20 text-blue-400',
  };
  return colors[status];
}

const hasLinks = project.data.links_website || project.data.links_demo || project.data.links_github || project.data.links_other;
---

<BaseLayout 
  title={title} 
  description={summary} 
  lang={lang}
>
  <article class="py-20">
    <div class="container-main">
      <a href={`/${lang}/projects`} class="inline-flex items-center text-surface-400 hover:text-white transition-colors mb-8 group">
        <svg class="w-4 h-4 mr-2 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Zpět na projekty
      </a>
      
      <header class="mb-12">
        <div class="flex flex-wrap items-center gap-4 mb-4">
          <h1 class="text-4xl sm:text-5xl font-display font-bold text-white">
            {title}
          </h1>
          <span class={`px-3 py-1 text-sm font-medium rounded-full ${getStatusColor(project.data.status)}`}>
            {getStatusLabel(project.data.status, lang)}
          </span>
        </div>
        
        <p class="text-xl text-surface-300 mb-6">
          {summary}
        </p>
        
        <div class="flex flex-wrap gap-2">
          {project.data.stack.map((tech) => (
            <span class="tag">{tech}</span>
          ))}
        </div>
      </header>
      
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2 space-y-8">
          <section class="glass-card p-6">
            <h2 class="text-xl font-display font-semibold text-white mb-4">
              Detaily
            </h2>
            <div class="prose prose-invert prose-surface max-w-none" set:html={renderedBody}>
            </div>
          </section>
          
          {project.data.images && project.data.images.length > 0 && (
            <section class="glass-card p-6">
              <h2 class="text-xl font-display font-semibold text-white mb-4">
                Screenshoty
              </h2>
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                {project.data.images.map((image) => (
                  <div class="aspect-video bg-surface-800 rounded-lg overflow-hidden">
                    <img 
                      src={image} 
                      alt={`${title} screenshot`}
                      class="w-full h-full object-cover"
                      loading="lazy"
                      onerror="this.parentElement.style.display='none'"
                    />
                  </div>
                ))}
              </div>
            </section>
          )}
        </div>
        
        <aside class="space-y-6">
          <div class="glass-card p-6">
            <h2 class="text-lg font-display font-semibold text-white mb-4">
              Technologie
            </h2>
            <div class="flex flex-wrap gap-2">
              {project.data.stack.map((tech) => (
                <span class="tag">{tech}</span>
              ))}
            </div>
          </div>
          
          {hasLinks && (
            <div class="glass-card p-6">
              <h2 class="text-lg font-display font-semibold text-white mb-4">
                Odkazy
              </h2>
              <div class="space-y-3">
                {project.data.links_website && (
                  <a href={project.data.links_website} target="_blank" rel="noopener noreferrer" class="btn-primary w-full justify-center">
                    Web
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                )}
                {project.data.links_demo && (
                  <a href={project.data.links_demo} target="_blank" rel="noopener noreferrer" class="btn-secondary w-full justify-center">
                    Demo
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                )}
                {project.data.links_github && (
                  <a href={project.data.links_github} target="_blank" rel="noopener noreferrer" class="btn-secondary w-full justify-center">
                    GitHub
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                )}
                {project.data.links_other && (
                  <a href={project.data.links_other} target="_blank" rel="noopener noreferrer" class="btn-secondary w-full justify-center">
                    Další odkaz
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                )}
              </div>
            </div>
          )}

          {project.data.year && (
            <div class="glass-card p-6">
              <h2 class="text-lg font-display font-semibold text-white mb-2">
                Rok
              </h2>
              <p class="text-surface-300">{project.data.year}</p>
            </div>
          )}
        </aside>
      </div>
    </div>
  </article>
</BaseLayout>
