---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getTranslations } from '../../../i18n/utils';
import { getCollection } from 'astro:content';
import { 
  getProjects, 
  getLocalizedTitle, 
  getLocalizedSummary,
  getStatusLabel,
  type ProjectEntry,
  type ProjectData
} from '../../../lib/projects';
import { marked } from 'marked';

const lang = 'cs';
const t = getTranslations(lang);

export async function getStaticPaths() {
  const projects = await getProjects();
  return projects.map((project) => ({
    params: { slug: project.data.projectSlug },
    props: { project },
  }));
}

interface Props {
  project: ProjectEntry;
}

const { project } = Astro.props;
const title = getLocalizedTitle(project, lang);
const summary = getLocalizedSummary(project, lang);
const bodyContent = project.data.body_cs || '';
const renderedBody = await marked(bodyContent);

const allDevlogs = await getCollection('devlogs');
const projectDevlogs = allDevlogs
  .filter(log => log.data.projectSlug === project.data.projectSlug)
  .sort((a, b) => b.data.version.localeCompare(a.data.version, undefined, { numeric: true }));
const latestDevlog = projectDevlogs[0];

function getStatusColor(status: ProjectData['status']): string {
  const colors: Record<ProjectData['status'], string> = {
    live: 'bg-green-500/20 text-green-400',
    beta: 'bg-yellow-500/20 text-yellow-400',
    prototype: 'bg-blue-500/20 text-blue-400',
  };
  return colors[status];
}

const hasLinks = project.data.links_website || project.data.links_demo || project.data.links_github || project.data.links_other;
---

<BaseLayout 
  title={title} 
  description={summary} 
  lang={lang}
>
  <article class="py-20">
    <div class="container-main">
      <a href={`/${lang}/projects`} class="inline-flex items-center text-surface-400 hover:text-white transition-colors mb-8 group">
        <svg class="w-4 h-4 mr-2 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        ZpÄ›t na projekty
      </a>
      
      <header class="mb-12">
        <div class="flex flex-wrap items-center gap-4 mb-4">
          <h1 class="text-4xl sm:text-5xl font-display font-bold text-white">
            {title}
          </h1>
          <span class={`px-3 py-1 text-sm font-medium rounded-full ${getStatusColor(project.data.status)}`}>
            {getStatusLabel(project.data.status, lang)}
          </span>
        </div>
        
        <p class="text-xl text-surface-300 mb-6">
          {summary}
        </p>
        
        <div class="flex flex-wrap items-center gap-3">
          <div class="flex flex-wrap gap-2">
            {project.data.stack.map((tech) => (
              <span class="tag">{tech}</span>
            ))}
          </div>
          {latestDevlog && (
            <a 
              href={`/${lang}/projects/${project.data.projectSlug}/devlog/${latestDevlog.data.version.replace(/\./g, '-')}`}
              class="inline-flex items-center gap-2 px-3 py-1.5 bg-brand-500/20 text-brand-400 hover:bg-brand-500/30 rounded-lg font-mono text-sm transition-colors border border-brand-500/30"
            >
              <span class="text-xs">ðŸ“‹</span>
              DEV LOG v{latestDevlog.data.version}
              <span class={`px-1.5 py-0.5 text-xs rounded ${
                latestDevlog.data.versionStatus === 'beta' ? 'bg-yellow-500/20 text-yellow-400' :
                latestDevlog.data.versionStatus === 'alpha' ? 'bg-red-500/20 text-red-400' :
                'bg-green-500/20 text-green-400'
              }`}>
                {latestDevlog.data.versionStatus.toUpperCase()}
              </span>
            </a>
          )}
        </div>
      </header>
      
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2 space-y-8">
          <section class="glass-card p-6">
            <h2 class="text-xl font-display font-semibold text-white mb-4">
              Detaily
            </h2>
            <div class="prose prose-invert prose-surface max-w-none" set:html={renderedBody}>
            </div>
          </section>
          
          {project.data.images && project.data.images.length > 0 && (
            <section class="glass-card p-6">
              <h2 class="text-xl font-display font-semibold text-white mb-4">
                Screenshoty
              </h2>
              <div class="grid grid-cols-2 sm:grid-cols-3 gap-3">
                {project.data.images.map((image, index) => (
                  <button 
                    type="button"
                    class="aspect-video bg-surface-800 rounded-lg overflow-hidden cursor-pointer hover:ring-2 hover:ring-brand-500 transition-all group"
                    onclick={`openLightbox('${image}')`}
                  >
                    <img 
                      src={image} 
                      alt={`${title} screenshot ${index + 1}`}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      loading="lazy"
                      onerror="this.parentElement.style.display='none'"
                    />
                  </button>
                ))}
              </div>
            </section>
          )}
        </div>
        
        <aside class="space-y-6">
          <div class="glass-card p-6">
            <h2 class="text-lg font-display font-semibold text-white mb-4">
              Technologie
            </h2>
            <div class="flex flex-wrap gap-2">
              {project.data.stack.map((tech) => (
                <span class="tag">{tech}</span>
              ))}
            </div>
          </div>
          
          {hasLinks && (
            <div class="glass-card p-6">
              <h2 class="text-lg font-display font-semibold text-white mb-4">
                Odkazy
              </h2>
              <div class="space-y-3">
                {project.data.links_website && (
                  <a href={project.data.links_website} target="_blank" rel="noopener noreferrer" class="btn-primary w-full justify-center">
                    Web
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                )}
                {project.data.links_demo && (
                  <a href={project.data.links_demo} target="_blank" rel="noopener noreferrer" class="btn-secondary w-full justify-center">
                    Demo
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                )}
                {project.data.links_github && (
                  <a href={project.data.links_github} target="_blank" rel="noopener noreferrer" class="btn-secondary w-full justify-center">
                    GitHub
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                )}
                {project.data.links_other && (
                  <a href={project.data.links_other} target="_blank" rel="noopener noreferrer" class="btn-secondary w-full justify-center">
                    {project.data.links_other_label || 'DalÅ¡Ã­ odkaz'}
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                )}
              </div>
            </div>
          )}

          {project.data.year && (
            <div class="glass-card p-6">
              <h2 class="text-lg font-display font-semibold text-white mb-2">
                Rok
              </h2>
              <p class="text-surface-300">{project.data.year}</p>
            </div>
          )}
        </aside>
      </div>
    </div>
  </article>

  <!-- Lightbox Modal -->
  <div id="lightbox" class="fixed inset-0 z-50 hidden items-center justify-center bg-black/90 backdrop-blur-sm" onclick="closeLightbox()">
    <button type="button" class="absolute top-4 right-4 text-white hover:text-brand-400 transition-colors" onclick="closeLightbox()">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
    <img id="lightbox-img" src="" alt="Screenshot" class="max-w-[90vw] max-h-[90vh] object-contain rounded-lg" onclick="event.stopPropagation()" />
  </div>

  <script is:inline>
    function openLightbox(src) {
      const lightbox = document.getElementById('lightbox');
      const img = document.getElementById('lightbox-img');
      img.src = src;
      lightbox.classList.remove('hidden');
      lightbox.classList.add('flex');
      document.body.style.overflow = 'hidden';
    }
    function closeLightbox() {
      const lightbox = document.getElementById('lightbox');
      lightbox.classList.add('hidden');
      lightbox.classList.remove('flex');
      document.body.style.overflow = '';
    }
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') closeLightbox();
    });
  </script>
</BaseLayout>
